<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/CubeButton"
        android:layout_width="161.8dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/main_button_drawable"
        android:onClick="toCube"
        android:text="@string/cube"
        android:textAllCaps="false"
        android:textColor="@color/colorButton"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/CreditCardButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/CreditCardButton"
        android:layout_width="161.8dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/main_button_drawable"
        android:onClick="toCreditCard"
        android:text="@string/credit_card"
        android:textAllCaps="false"
        android:textColor="@color/colorButton"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/CubeButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cubeButton"
        android:layout_width="161.8dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/main_button_drawable"
        android:onClick="toPushUp"
        android:text="@string/push_up"
        android:textAllCaps="false"
        android:textColor="@color/colorButton"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CubeButton" />
</androidx.constraintlayout.widget.ConstraintLayout>